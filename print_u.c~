#include "main.h"
#include <stdio.h>

/**
 * _pow - finds n to the power of m
 * @n: the number
 * @m: the power
 * Return: the result
 */
int _pow(int n, int m)
{
	int x, suma = 1;

	for(x = m; x > 0; x--)
	{
		suma = suma * n;
		printf("suma = %d\n", suma);
		printf("suma * m = %d\n", suma * m);
		printf("n = %d, x = %d, while m = %d\n", n, x, m);
		printf("__________________________________________");
	}
	return (suma);
}



/**
 * print_u - prints unsigned integers on std output
 *
 * @num: number to be printed
 *
 * Return: number of characters printed
 */

int print_u(unsigned int num)
{
	unsigned int count, len, prt = num, rem = num;
	int total = 0, piece = 0;

	for (count = 0; rem > 0; count++)
	{
		rem /= 10;
		printf("rem = %d\n", rem);
	}
	printf("count = %d\n", count);

	for (len = count; len > 0; len--)
	{
		printf("len = %d\n", len);
		printf("piece = %d\n", piece);
		piece = _pow(4, 3);
		printf("piece = %d\n", piece);
		putchar(piece + '0');
		printf("prt = %d\n", prt);
		total++;

		prt %= (10 * len);
	}
	printf("total = %d\n", total);
	return (total);
}
